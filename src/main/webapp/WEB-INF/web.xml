<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


        <servlet>
            <servlet-name>ProjectServlet</servlet-name>
            <servlet-class>servlets.ProjectServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>ProjectServlet</servlet-name>
            <url-pattern>/project</url-pattern>
        </servlet-mapping>
    <servlet>
        <servlet-name>AddProject</servlet-name>
        <servlet-class>servlets.AddProject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddProject</servlet-name>
        <url-pattern>/addPr</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateProject</servlet-name>
        <servlet-class>servlets.UpdateProject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProject</servlet-name>
        <url-pattern>/updatePro</url-pattern>
    </servlet-mapping>

    <servlet>
            <servlet-name>TaskServlet</servlet-name>
            <servlet-class>servlets.TaskServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>TaskServlet</servlet-name>
            <url-pattern>/task</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>AddTask</servlet-name>
        <servlet-class>servlets.AddTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTask</servlet-name>
        <url-pattern>/aaddtask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateTask</servlet-name>
        <servlet-class>servlets.UpdateTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateTask</servlet-name>
        <url-pattern>/updateT</url-pattern>
    </servlet-mapping>

        <servlet>
            <servlet-name>ResourceServlet</servlet-name>
            <servlet-class>servlets.ResourceServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>ResourceServlet</servlet-name>
            <url-pattern>/resource</url-pattern>
        </servlet-mapping>


        <welcome-file-list>
            <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
